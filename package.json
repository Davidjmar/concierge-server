{
  "name": "activity-recommender",
  "version": "1.0.0",
  "description": "AI-powered activity recommendation service",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "test:watch": "jest --watch",
    "recommendations": "node --loader ts-node/esm src/scripts/triggerRecommendations.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.7.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.15.11",
    "@types/node-cron": "^3.0.7",
    "@types/pg": "^8.11.0",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^2.0.12",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "testTimeout": 30000,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
